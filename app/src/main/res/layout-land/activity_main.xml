<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/open"
        android:onClick="openThedoor"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="OPEN"
        android:layout_marginTop="220dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp" />

    <Button
        android:id="@+id/close"
        android:onClick="closeThedoor"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:text="CLOSE"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp" />
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_marginStart="300dp"
    android:layout_marginTop="-150dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="300dp">
    <Button
        android:id="@+id/Top"
        android:onClick="Top"
        android:layout_height="100dp"
        android:layout_width="80dp"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="130dp"
        android:background="@drawable/amam"
        android:text="TOP"
        android:layout_marginTop="160dp"
         />

    <Button
        android:id="@+id/botom"
        android:onClick="botom"
        android:layout_height="120dp"
        android:layout_width="80dp"
        android:background="@drawable/khalf"
        android:text="Bottom"
        android:textSize="10dp"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="380dp"
         />

    <Button
        android:id="@+id/left"
        android:onClick="Lift"
        android:layout_marginTop="280dp"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:background="@drawable/yassar"
        android:text="Left"
         />

    <Button
        android:id="@+id/right"
        android:onClick="right"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/yamin"
        android:text="Right"
        android:layout_marginStart="250dp"
       android:layout_marginTop="280dp"
        android:layout_marginLeft="300dp" />

    <Button
        android:id="@+id/stop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="280dp"
        android:onClick="stop"
        android:text="STOP"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="130dp" />
</FrameLayout>
    <Button
        android:id="@+id/bid"
        android:onClick="bid"
        android:layout_marginTop="120dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="k" />
</FrameLayout>

